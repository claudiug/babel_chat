<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Welcome <%= session[:username].capitalize %>
        <small>You select language: <strong><%= session[:type] %></small></strong>
      </h1>
    </div>
    <p>Chat window</p>
    <div id="chat"></div>
    <div class="col-md-7">
      <div class="row">
        <%= form_tag messages_path, method: :post,remote: true, class: 'form-inline' do %>
            <div class="form-group">
              <div class="row">
                <div class="col-md-12">
                  <%= text_field_tag :messages, "", class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-md-4">
                  <%= submit_tag 'Send', class: 'btn btn-info' %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <p>List of users</p>
    </div>
  </div>
</div>